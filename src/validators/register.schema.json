{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
	  "username": {
		"type": "string",
		"minLength": 1,
		"maxLength": 20
	  },
	  "password": {
		"type": "string",
		"minLength": 8,
		"maxLength": 20
	  },
	  "firstName": {
		"type": "string"
	  },
	  "lastName": {
		"type": "string"
	  },
	  "email": {
		"type": "string",
		"format": "email"
 	  }
	},
	"additionalProperties": false,
	"required": [
	  "username",
	  "password",
	  "firstName",
	  "lastName",
	  "email"
	]
  }